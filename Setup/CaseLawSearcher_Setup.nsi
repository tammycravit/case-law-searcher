OutFile "Setup.exe"
InstallDir "$PROGRAMFILES\Case Law Searcher"
InstallDirRegKey HKLM "${PRODUCT_DIR_REGKEY}" ""
ShowInstDetails show
ShowUnInstDetails show

Section "Application" SEC01
  SetOutPath "$INSTDIR"
  SetOverwrite ifnewer
  File "..\CaseLawSearcher.exe"
  File "..\gpl-2.0.txt"
  File "..\Sources.cfg"
  File "..\lu.cfg"
  
; Shortcuts
  !insertmacro InstallLib REGDLL 0 REBOOT_NOTPROTECTED "C:\Windows\System32\HTTPX.DLL" $SYSDIR\HTTPX.DLL $SYSDIR
  !insertmacro MUI_STARTMENU_WRITE_BEGIN Application
  CreateDirectory "$SMPROGRAMS\$ICONS_GROUP"
  CreateShortCut "$SMPROGRAMS\$ICONS_GROUP\Case Law Searcher.lnk" "$INSTDIR\CaseLawSearcher.exe"
  CreateShortCut "$DESKTOP\Case Law Searcher.lnk" "$INSTDIR\CaseLawSearcher.exe"
  WriteRegStr HKCU "Software\Microsoft\Windows\CurrentVersion\Run" "Case Law Searcher" "$INSTDIR\CaseLawSearcher.exe"
  !insertmacro MUI_STARTMENU_WRITE_END
SectionEnd

Section -AdditionalIcons
  !insertmacro MUI_STARTMENU_WRITE_BEGIN Application
  WriteIniStr "$INSTDIR\${PRODUCT_NAME}.url" "InternetShortcut" "URL" "${PRODUCT_WEB_SITE}"
  CreateShortCut "$SMPROGRAMS\$ICONS_GROUP\Website.lnk" "$INSTDIR\${PRODUCT_NAME}.url"

  Abort
FunctionEnd

Section Uninstall
  !insertmacro MUI_STARTMENU_GETFOLDER "Application" $ICONS_GROUP
  Delete "$INSTDIR\${PRODUCT_NAME}.url"
  Delete "$INSTDIR\uninst.exe"
  Delete "$INSTDIR\gpl-2.0.txt"
  Delete "$INSTDIR\CaseLawSearcher.exe"
  Delete "$INSTDIR\Sources.cfg"
  Delete "$INSTDIR\lu.cfg"

  Delete "$SMPROGRAMS\$ICONS_GROUP\Uninstall.lnk"
  Delete "$SMPROGRAMS\$ICONS_GROUP\Website.lnk"
  Delete "$DESKTOP\Case Law Searcher.lnk"
  Delete "$SMPROGRAMS\$ICONS_GROUP\Case Law Searcher.lnk"
  DeleteRegKey HKCU "Software\Microsoft\Windows\CurrentVersion\Run\Case Law Searcher"
  
  RMDir "$SMPROGRAMS\$ICONS_GROUP"
  RMDir "$INSTDIR"

  !insertmacro UnInstallLib REGDLL SHARED REBOOT_NOTPROTECTED $SYSDIR\HTTPX.DLL

  DeleteRegKey ${PRODUCT_UNINST_ROOT_KEY} "${PRODUCT_UNINST_KEY}"
  DeleteRegKey HKLM "${PRODUCT_DIR_REGKEY}"
  SetAutoClose true
